<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="image-container mt-4">
        <!-- Adicione suas imagens aqui -->
      </div>

      <h1><%= @tool.name %></h1>

      <p><%= @tool.description %></p>
      <p><strong>Availability:</strong> <%= @tool.availability ? 'Available' : 'Not available' %></p>


      <p><strong>Address:</strong> <%= @tool.address %></p>

      <div id="map" style="height: 300px;"></div>

      <script>
        function initMap() {
          var geocoder = new google.maps.Geocoder();
          var address = "<%= @tool.address %>";
          var mapOptions = {
            zoom: 15,
            center: { lat: 0, lng: 0 }
          };
          var map = new google.maps.Map(document.getElementById('map'), mapOptions);

          geocoder.geocode({ 'address': address }, function(results, status) {
            if (status === google.maps.GeocoderStatus.OK) {
              map.setCenter(results[0].geometry.location);
              var marker = new google.maps.Marker({
                map: map,
                position: results[0].geometry.location
              });
            } else {
              console.log('Geocode was not successful for the following reason: ' + status);
            }
          });
        }
      </script>
      <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap" async defer></script>
    
    <div class="btn-toolbar mt-4">
        <div class="mt-2">
          <%= link_to 'Book', new_tool_booking_path(@tool), class: "btn btn-primary" %>
        </div>

        <div class="mt-2">
          <%= link_to 'Back to Tools', tools_path, class: "btn btn-secondary" %>
        </div>
    </div>
    </div>
  </div>
  
</div>






